{
  "name": "sample-db",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist": "electron-builder -m"
  },
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^19.16.2"
  },
  "build": {
    "productName": "SampleDB",
    "directories": {
      "app": "app",
      "output": "dist"
    },
    "asarUnpack": ["**/*"],
    "compression": "maximum",
    "mac": {
      "target": "dmg"
    }, 
    "win": {
      "target": "nsis"
    }
  }
}
